<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="30dp" >
        <TextView
        	android:id="@+id/button_account"
        	style="@style/SideMenuButton"
        	android:layout_marginBottom="@dimen/menuEntryMarginTop"
        	android:minHeight="50dp"
        	android:text="@string/menu_button_account" />

        <TextView
        	android:id="@+id/button_payment_token"
        	style="@style/SideMenuButton"
        	android:layout_marginBottom="@dimen/menuEntryMarginTop"
        	android:minHeight="50dp"
        	android:text="@string/menu_button_cards" />

        <TextView
        	android:id="@+id/button_cab_office"
        	style="@style/SideMenuButton"
        	android:layout_marginBottom="@dimen/menuEntryMarginTop"
        	android:minHeight="50dp"
        	android:text="@string/menu_button_cab_office" />
        <TextView
        	android:id="@+id/button_tour"
        	style="@style/SideMenuButton"
        	android:layout_marginBottom="@dimen/menuEntryMarginTop"
        	android:minHeight="50dp"
        	android:text="@string/menu_button_tour" />
        <TextView
        	android:id="@+id/button_logout"
        	style="@style/SideMenuButton"
        	android:layout_marginBottom="@dimen/menuEntryMarginTop"
        	android:text="@string/menu_button_logout" />
    </LinearLayout>
    <TextView
    	android:id="@+id/version"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:layout_alignParentRight="true"
    	android:paddingBottom="3dp"
    	android:paddingRight="3dp"
    	android:text="vx.xx"
    	android:textColor="#aaaaaa"
    	android:textSize="14dp" />
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:paddingBottom="3dp"
    	android:paddingLeft="3dp"
    	android:text="Powered by T Dispatch"
    	android:textColor="#aaaaaa"
    	android:textSize="14dp" />
</RelativeLayout>