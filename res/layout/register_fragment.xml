<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:orientation="vertical" >

	        <EditText
	            android:id="@+id/et_first_name"
	            style="@style/TextInput"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:hint="@string/register_form_first_name_hint"
	            android:inputType="textCapSentences|textPersonName" >

			</EditText>

	        <EditText
	            android:id="@+id/et_last_name"
	            style="@style/TextInput"
	            android:hint="@string/register_form_last_name_hint"
	            android:inputType="textCapSentences|textPersonName" />

	        <EditText
	            android:id="@+id/et_phone"
	            android:hint="@string/register_form_phone_hint"
	            android:inputType="phone"
	            style="@style/TextInput" />

	        <EditText
	            android:id="@+id/et_email"
	            android:hint="@string/register_form_email_hint"
	            android:inputType="textEmailAddress"
	            style="@style/TextInput" />

	        <EditText
	            android:id="@+id/et_password1"
	            android:hint="@string/register_form_password_1_hint"
	            android:inputType="textPassword"
	            style="@style/TextInput" />

	        <EditText
	            android:id="@+id/et_password2"
	            android:hint="@string/register_form_password_2_hint"
	            android:inputType="textPassword"
	            style="@style/TextInput" />

	        <LinearLayout
	            android:id="@+id/tos_container"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >

	            <CheckBox
	                android:id="@+id/cb_tos"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:button="@drawable/checkbox_selector"
	                android:text="@string/register_form_terms_and_conditions"
	                android:textColor="#888888" />

	            <TextView
	                android:id="@+id/button_tos"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="10dp"
	                android:text="@string/register_form_button_show_terms_and_conditions"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/link_fg"
	                android:textSize="14dp" />

	        </LinearLayout>

	    </LinearLayout>

	    <TextView
	        android:id="@+id/button_register"
	        style="@style/ButtonOk"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_weight="1"
	        android:text="@string/register_form_button_register" />

	</LinearLayout>

</ScrollView>