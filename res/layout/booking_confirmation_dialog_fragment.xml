<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">
	<LinearLayout
		android:id="@+id/main_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<TextView
			android:id="@+id/dialog_title"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#eedddddd"
			android:clickable="false"
			android:ellipsize="end"
			android:gravity="center"
			android:maxLines="1"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:text="@string/new_booking_dialog_title"
			android:textColor="#333333"
			android:textSize="18dp"
			android:textStyle="bold" />
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:layout_weight="1" >
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="120dp"
				android:orientation="vertical"
				android:paddingLeft="5dp"
				android:paddingRight="5dp" >
				
				<LinearLayout
				    android:id="@+id/card_container"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content" >
					    <ImageView
				    	android:layout_width="40dp"
				    	android:layout_height="40dp"
				    	android:layout_gravity="center"
				    	android:src="@drawable/icon_card" />
				    <Spinner
				        android:id="@+id/spinner_card"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_weight="1" />
				</LinearLayout>
				
				<LinearLayout
					android:id="@+id/pickup_date_time_container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:orientation="vertical" >
					<LinearLayout
						android:id="@+id/picker_buttons_container"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" >
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:src="@drawable/icon_clock" />
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content" >
							<TextView
								android:id="@+id/button_now"
								style="@style/ButtonActive"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:ellipsize="end"
								android:maxLines="1"
								android:text="@string/new_booking_dialog_pickup_time_now"
								android:textColor="@color/pickup_location"
								android:textSize="16dp"
								android:textStyle="bold" />
							<TextView
								android:id="@+id/button_later"
								style="@style/ButtonOk"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
								android:layout_weight="1"
								android:ellipsize="end"
								android:maxLines="1"
								android:text="@string/new_booking_dialog_pickup_time_later"
								android:textColor="@color/pickup_location"
								android:textSize="16dp"
								android:textStyle="bold" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/pickup_pickers_container"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical" >
						<LinearLayout
							android:id="@+id/pickup_time_container"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp" >
							<ImageView
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_gravity="center"
								android:src="@drawable/icon_clock" />
							<TextView
								android:id="@+id/button_pickup_time"
								style="@style/ButtonOk"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:ellipsize="end"
								android:maxLines="1"
								android:text="PICKUP TIME"
								android:textColor="@color/pickup_location"
								android:textSize="16dp"
								android:textStyle="bold" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/pickup_date_container"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp" >
							<ImageView
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_gravity="center"
								android:src="@drawable/icon_calendar" />
							<TextView
								android:id="@+id/button_pickup_date"
								style="@style/ButtonOk"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:ellipsize="end"
								android:maxLines="1"
								android:text="PICKUP DATE"
								android:textColor="@color/pickup_location"
								android:textSize="16dp"
								android:textStyle="bold" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/vehicle_container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >
					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_gravity="center"
						android:src="@drawable/icon_vehicle" />
					<Spinner
						android:id="@+id/spinner_vehicle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						tools:listitem="@layout/vehicle_spinner_entry" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/pickup_container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" >
					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/map_marker_pickup" />
					<TextView
						android:id="@+id/pickup_address"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:ellipsize="end"
						android:maxLines="4"
						android:text="PICKUP"
						android:textColor="@color/pickup_location"
						android:textSize="16dp"
						android:textStyle="bold" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/dropoff_container"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp" >
					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/map_marker_dropoff" />
					<TextView
						android:id="@+id/dropoff_address"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:ellipsize="end"
						android:maxLines="4"
						android:text="DROPOFF"
						android:textColor="@color/dropoff_location"
						android:textSize="16dp"
						android:textStyle="bold" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
		<LinearLayout
			android:id="@+id/fee_container"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:background="#eecccccc"
			android:paddingLeft="5dp"
			android:paddingRight="5dp" >
			<!-- FIXME should use separate string for Please Wait -->
			<TextView
				android:id="@+id/fee"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:ellipsize="end"
				android:gravity="center"
				android:maxLines="1"
				android:singleLine="true"
				android:text="@string/tdfragment_please_wait"
				android:textColor="#333333"
				android:textSize="16dp"
				android:textStyle="bold" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1" >
				<TextView
					android:id="@+id/button_ok"
					style="@style/ButtonOk"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="1dp"
					android:maxLines="1"
					android:visibility="invisible"
					android:text="@string/button_book" />
				<TextView
					android:id="@+id/button_retry"
					style="@style/ButtonOk"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:maxLines="1"
					android:visibility="invisible"
					android:text="@string/button_retry" />
			</RelativeLayout>
			<TextView
				android:id="@+id/button_cancel"
				style="@style/ButtonCancel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:maxLines="1"
				android:text="@string/new_booking_dialog_button_cancel" />
		</LinearLayout>
	</LinearLayout>
	<RelativeLayout
		android:id="@+id/busy_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignBottom="@id/main_container"
		android:layout_alignTop="@id/main_container"
		android:background="@color/dimmed" >
		<ImageView
			android:id="@+id/busy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="false"
			android:layout_centerHorizontal="false"
			android:layout_centerInParent="true"
			android:layout_marginTop="25dp"
			android:background="@anim/busy"
			android:padding="10dp"
			android:src="@null" />
	</RelativeLayout>
</RelativeLayout>