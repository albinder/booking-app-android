<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/background"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#eedddddd"
		android:clickable="false"
		android:ellipsize="end"
		android:gravity="center"
		android:maxLines="1"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:text="@string/vehicle_selector_title"
		android:textColor="#333333"
		android:textSize="18dp"
		android:textStyle="bold" />

	<fragment
		android:id="@+id/vehicle_list_fragment"
		android:name="com.tdispatch.passenger.fragment.VehicleListFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:layout="@layout/vehicle_list_fragment" />
</LinearLayout>

