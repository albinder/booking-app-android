<resources>

	<style name="ToastBase">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">6dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>


	<style name="ToastDefault" parent="@style/ToastBase">
		<item name="android:background">#cc0099cc</item>
	</style>
	<style name="ToastError" parent="@style/ToastBase">
		<item name="android:background">#ccba0000</item>
	</style>
	<style name="ToastOk" parent="@style/ToastBase">
		<item name="android:background">#cc177e06</item>
	</style>



	<style name="ToastIconBase">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">6dp</item>
	</style>

	<style name="ToastIconDefault" parent="@style/ToastIconBase">
		<item name="android:src">@drawable/ic_launcher</item>
	</style>
	<style name="ToastIconError" parent="@style/ToastIconBase">
<!-- 		<item name="android:src">@drawable/toast_icon_error</item> -->
	</style>
	<style name="ToastIconOk" parent="@style/ToastIconBase">
<!-- 		<item name="android:src">@drawable/toast_icon_ok</item> -->
	</style>



	<style name="ToastBodyBase">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">10dp</item>
		<item name="android:textSize">14dp</item>
		<item name="android:text">Toast body</item>
	</style>

	<style name="ToastBodyDefault" parent="@style/ToastBodyBase">
		<item name="android:textColor">#ffffff</item>
	</style>
	<style name="ToastBodyError" parent="@style/ToastBodyBase">
		<item name="android:textColor">#ffffff</item>
	</style>
	<style name="ToastBodyOk" parent="@style/ToastBodyBase">
		<item name="android:textColor">#ffffff</item>
	</style>

</resources>