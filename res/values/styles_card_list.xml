<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CardList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#eeeeee</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="CardListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#666666</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:padding">2dp</item>
    </style>


    <style name="CardListEntryContainer">
        <item name="android:background">@color/background</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="CardListEntryInfoContainer" parent="@style/CardListEntryContainer">
		<item name="android:orientation">vertical</item>
    </style>
    <style name="CardListEntryMenuContainer" parent="@style/CardListEntryContainer">
        <item name="android:padding">2dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CardListEntryMenuButton">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_weight">1</item>
	    <item name="android:clickable">true</item>
		<item name="android:padding">3dp</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/booking_list_button_selector</item>
    </style>

	<!-- ####################################################################################################### -->


    <style name="CardListEntry">
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16dp</item>
	</style>

    <style name="CardListEntryLabel" parent="@style/CardListEntry">
        <item name="android:textColor">#555555</item>
	</style>

	<style name="CardListEntryNumber" parent="@style/CardListEntry">
	    <item name="android:textColor">#555555</item>
	</style>

	
	
	
	
	
	
	<style name="CardSpinnerListEntry" parent="@style/CardListEntry">
<!--         <item name="android:ellipsize">marquee</item> -->
<!--         <item name="android:singleLine">true</item> -->
<!--         <item name="android:layout_height">50dp</item> -->
<!--         <item name="android:gravity">center_vertical</item> -->
	</style>
	
</resources>